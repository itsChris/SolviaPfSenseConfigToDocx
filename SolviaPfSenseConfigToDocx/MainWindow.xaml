<Window x:Class="SolviaPfSenseConfigToDocx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PfSense Config Reader" Height="500" Width="600" KeyDown="Window_KeyDown">
    <Grid>
        <!-- Label for Ctrl-F -->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="14" Foreground="Gray">Ctrl-F to search</TextBlock>

        <!-- Select File Button -->
        <Button Content="Select File" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Click="SelectFileButton_Click" Margin="0,40,0,0"/>
        <Button Content="Export to Docx" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ExportToDocxButton_Click" Margin="0,90,0,0"/>

        <!-- Search Panel -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,80,10,0" Visibility="Collapsed" Name="SearchPanel">
            <TextBox Name="SearchTextBox" Width="200" Height="25" VerticalAlignment="Center" Margin="0,0,10,0" KeyDown="SearchTextBox_KeyDown"/>
            <Button Content="Search" Width="80" Click="SearchButton_Click"/>

        </StackPanel>

        <!-- RichTextBox for output -->
        <RichTextBox Name="OutputRichTextBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,120,10,10"/>
    </Grid>
</Window>
